<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="237dp"
    android:layout_height="373dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/select_item"
    android:layout_marginEnd="30dp"
    android:layout_marginRight="30dp">

    <TextView
        android:id="@+id/name_product"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        tools:text="Hand cream"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/price_product"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:textSize="20sp"
        tools:text="$12.29"
        app:layout_constraintStart_toStartOf="@id/name_product"
        app:layout_constraintTop_toBottomOf="@id/name_product"
        app:layout_constraintEnd_toEndOf="@+id/name_product"
        android:layout_marginEnd="50dp"
        android:textColor="@color/black"
        android:layout_marginRight="50dp" />

    <TextView
        android:id="@+id/size_product"
        android:layout_width="36dp"
        android:layout_height="16dp"
        android:textSize="12sp"
        tools:text="300 Ml"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/price_product"
        app:layout_constraintTop_toBottomOf="@id/name_product"
        android:layout_marginLeft="5dp" />


    <ImageView
        android:id="@+id/image_product"
        android:layout_width="129dp"
        android:layout_height="251dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_product"
        android:layout_marginTop="8dp"
        tools:src="@drawable/one"
        />






</androidx.constraintlayout.widget.ConstraintLayout>